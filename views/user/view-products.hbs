<section>

    <div class="container mt-5">
        <div class="row">
            {{#each products}}
            <div class="col-md-3">

                <div class="card" style="width: 18rem;">
                    <img style="width: 200px; height: 200px;" src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Catogory}}</p>
                        <p class="card-text">{{this.Discription}}</p>
                        <p class="card-text">Rs:{{this.Prise}}</p>
                        
                        <button onclick="addtoCart('{{this._id}}')" class="btn btn-primary">Add To Cart</button>

                    </div>
                </div>

            </div>
            {{/each}}
        </div>

    </div>

</section>
